<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPhoneActivity">

    <include
        android:id="@+id/phone_register_page_toolbar"
        layout="@layout/app_bar_layout" />

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_register_page_toolbar"
        android:layout_alignParentLeft="true"
        android:hint="Enter your phone number"
        android:inputType="phone"
        android:textAlignment="center"
        android:background="@drawable/input_text"
        android:padding="5dp"
        android:drawableStart="@drawable/phone"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:drawableLeft="@drawable/email"

        />

    <EditText
        android:id="@+id/phone_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_phone"
        android:layout_alignParentLeft="true"
        android:hint="Enter OTP"
        android:textAlignment="center"
        android:background="@drawable/input_text"
        android:padding="5dp"
        android:drawableStart="@drawable/password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:drawableLeft="@drawable/email"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/register_phone_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_otp"
        android:padding="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:text="Send Verification code"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />
    <Button
        android:id="@+id/verify_otp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_phone_button"
        android:padding="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:text="Verify OTP"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />

</RelativeLayout>