<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="2dp"
        app:civ_border_color="#E0E0E0"/>

    <TextView
        android:id="@+id/user_profile_user_name"
        android:layout_below="@id/user_profile_image"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ChatBox"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"/>

    <TextView
        android:id="@+id/user_profile_user_status"
        android:layout_below="@id/user_profile_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey! there i am using ChatBox"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/user_send_message_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_user_status"
        android:text="Send Request"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />

    <Button
        android:id="@+id/user_cancel_message_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_send_message_button"
        android:text="Cancel Request"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:visibility="invisible"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />

</RelativeLayout>